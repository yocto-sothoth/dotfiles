{
  "title": "Customize",
  "rules": [
    {
      "description": "IME on Emacs",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "backslash",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "org.gnu.Emacs"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "IME on iTerm2",
      "manipulators": [
